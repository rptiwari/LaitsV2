      <Inputs></Inputs>
      <Outputs>
        <Node type="regularlink" name="births"></Node>
	    </Outputs>
      <Equation>growth_rate</Equation>
      <InitialValue>.40</InitialValue>
      <CorrectDescription>The rate that Giardia reproduce</CorrectDescription>
      <Plan>fixed value</Plan>
